<%= form_for @student, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, 'First Name', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, 'Last Name', class: 'control-label col-md-2' %>
    <div class="col-md-10"> 
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :school, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:school, ['SEAS', 'Columbia College', 'Barnard', 'General Studies', 'Law School', 'Business School', 'SIPA', 'GSAS'], {}, {:class => "form-control"}) %>
    </div>
  </div>

  <div class="form-group"> 
    <%= f.label :degree, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:degree, ['B.A.', 'B.S.', 'M.A.', 'M.S.', 'PhD'], {}, {:class => "form-control"})%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year_of_graduation, 'Graduation Year', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :year_of_graduation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :major, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :major, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :interviewing_for, 'Position Type', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:interviewing_for, ['Casual', 'Full Time', 'Part Time'], {}, {:class => "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :interview_type, 'Industry', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:interview_type, ['Academic', 'Advertisement/Marketing/PR', 'Consulting', 'Consumer Products', 'Engineering', 'Entertainment', 'Financial Services', 'Government', 'Healthcare', 'Law', 'Media', 'Programming', 'Non-Profit'], {}, {:class => "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :free_times, 'Available Times', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.fields_for :free_times do |builder| %>
        <%= render 'free_time_fields', f: builder %>
      <% end %> 
      <span class="bootstrap-label">
        <%= link_to_add_fields "+ Add Time", f, :free_times %>
      </span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Save", :class => 'simple-button large'%>
    </div>
  </div>
<% end %>
  

